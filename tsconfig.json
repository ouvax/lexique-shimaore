{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "react-native",
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "types": []
  },
  "include": ["./**/*.ts", "./**/*.tsx", "theme.d.ts"]
}
